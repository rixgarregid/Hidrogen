    .toolbar
        display block
        width 100%
        height 40px
        margin-top 20px
        color text-color-highlight

        .custom-libs-btn
            background none
            height 40px
            float left

        .searchbox
            display inline-block
            float left
            width 250px
            height 40px
            margin-left 20px
            margin-right 30px
            position relative

            &.active
                .search-icon
                    opacity 1

                .input-search
                    width 215px

            .search-icon
                width 40px
                height 40px
                line-height 40px
                opacity 0.8
                padding 0
                background none

                &:hover
                    opacity 1
                    background none

            .input-search
                position absolute
                top 0
                left 40px
                width 0
                height 39px
                border none
                background transparent
                font-family default-font
                font-size 14px
                color text-color-highlight
                transition ease-in-out .2s
                border-bottom 1px solid text-color-highlight

        .total-game-counter
            display inline-block
            height 40px
            font-size 13px
            color text-color

            &.no-display
                display none

            span
                line-height 40px

        .add-btn
            width 40px
            height 40px
            line-height 40px
            float right
            margin-right 20px
            opacity 0.8
            background none
            font-size 17px
            padding 0
            border none

            &:hover
                opacity 1
                background none

    .game-container
        display grid
        // grid-template-columns repeat(5, 240px)
        grid-template-columns repeat(5, 250px)
        box-sizing border-box
        width 100%
        height 100%
        padding 30px
        overflow-y scroll

::-webkit-scrollbar
    display none
