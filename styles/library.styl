.library
    display inline-block
    width 1270px
    height 850px
    position absolute
    top 20px
    left -970px
    float right
    transition ease-in-out .2s

    &.active
        left 300px

    .toolbar
        display block
        width 100%
        height 39px
        // background #39424e
        // border-radius 10px 0 0 0
        border-bottom 1px solid #000

        .searchbox
            display inline-block
            float left
            width 200px
            height 40px
            margin-left 20px
            position relative

            &.active
                .input-search
                    width 165px

            .icon-search
                display inline-block
                width 40px
                height 40px
                text-align center
                line-height 40px
                cursor pointer

            .input-search
                position absolute
                top 0
                left 40px
                width 0
                height 39px
                border none
                background transparent
                font-family 'Roboto'
                font-size 14px
                color #fff
                transition ease-in-out .2s
                border-bottom 1px solid #fff

        .add-btn
            display inline-block
            width 40px
            height 40px
            text-align center
            line-height 40px
            float right
            margin-right 20px
            cursor pointer

    .game-container
        display grid
        // grid-template-columns repeat(5, 240px)
        grid-template-columns repeat(5, 250px)
        box-sizing border-box
        width 100%
        height 100%
        padding 30px
        overflow-y scroll

::-webkit-scrollbar
    display none
