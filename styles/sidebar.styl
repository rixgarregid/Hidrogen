.sidebar
    display block
    width 350px
    height 850px
    float left
    background #1e252e
    border-radius 0 0 0 10px
    transition .3s ease-in-out
    position relative
    z-index 5

    .list
        width 100%
        height 100%

        .list-item
            width 280px
            padding 20px 35px

            &:nth-child(1)
                height 60px

            &:nth-child(5)
                margin-top 420px

            .icon-hidrogen
                display block
                width 100%
                height 60px
                cursor default !important
                background url('../static/images/logo-hidrogen.png')

    &.collapsed
        width 60px

        .list-item
            width 40px
            height 60px
            padding 10px
            text-align center

            .icon
                float none
                line-height 60px
                margin-right 0

            .text
                display none

            .icon-hidrogen
                display block
                width 40px
                height 60px
                background url('../../resources/images/icon-hidrogen.png')
