.sidebar
    display block
    width 299px
    height 850px
    float left
    background sidebar-background-color
    transition .3s ease-in-out
    position relative
    z-index 5
    border-right 1px solid #000

    .list
        width 100%
        height 100%

        .list-item
            width 230px
            padding 20px 35px

            .text
                font-family 'Roboto' !important

            &:nth-child(1)
                margin-top 30px

            &:nth-child(5)
                margin-top 490px

    &.collapsed
        width 60px

        .list-item
            width 40px
            height 60px
            padding 10px
            text-align center

            .icon
                float none
                line-height 60px
                margin-right 0

            .text
                display none

            .icon-hidrogen
                display block
                width 40px
                height 60px
                background url('../../resources/images/icon-hidrogen.png')
