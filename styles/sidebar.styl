.sidebar
    display block
    width 300px
    height 850px
    position relative
    z-index 5
    float left
    // border-right 1px solid panel-border-color
    background sidebar-bg-color
    transition .3s ease-in-out

    .sidebar-list
        width 100%
        height 100%

        .list-item
            width 230px
            padding 20px 35px

            span
                font-family default-font !important

            &:nth-child(1)
                margin-top 30px

            &:nth-child(4)
                // margin-top 490px
                margin-top 520px

    .user-profile-panel
        display block
        width 100%
        padding 20px
        position absolute
        top 60%
        left 0
        box-sizing border-box

        .profile-pic
            display block
            background #fff
            border-radius 50%
            width 70px
            height 70px
            margin-bottom 30px
            opacity 0.8
            transition .2s ease-in-out
            cursor pointer
            margin auto

            &:hover
                opacity 1

        .username
            font-size 17px
            width 100%
            display block
            text-align center
            opacity 0.8
            transition .2s ease-in-out
            cursor pointer
            margin-top 30px

            &:hover
                opacity 1

    .update-ready-btn
        display none
        width 150px
        height 150px
        position absolute
        top 60%
        left 50%
        transform translateX(-50%)
        background transparent
        text-align center

        &.active
            display block
            animation highlight 2s ease-in-out infinite

        .update-icon
            display block !important
            color #3fab2e
            font-size 50px
            margin-bottom 20px
            margin-right 0

        .update-ready-label
            display block !important
            color #3fab2e
            font-size 15px
            font-family 'Roboto'

        @keyframes highlight
            0%
                opacity 0.4
            50%
                opacity 1
            100%
                opacity 0.4
