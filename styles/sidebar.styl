.sidebar
    display block
    width 300px
    height 850px
    position relative
    z-index 5
    float left
    // border-right 1px solid panel-border-color
    background sidebar-background-color
    transition .3s ease-in-out

    .sidebar-list
        width 100%
        height 100%

        .list-item
            width 230px
            padding 20px 35px

            span
                font-family default-font !important

            &:nth-child(1)
                margin-top 30px

            &:nth-child(5)
                margin-top 490px
