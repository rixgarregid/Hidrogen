.login
    display block
    width 1570px
    height 850px
    position relative
    bottom 0
    left 50%
    transform translateX(-50%)
    background url('../static/images/login-background.jpg') no-repeat center
    z-index 90

    .form
        display block
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%) scale(0)
        transition ease-in-out .2s

    .login-form.active, .signup-form.active
        transform translate(-50%, -50%) scale(1)

    .login-form
        .input-text:nth-child(3)
            margin-bottom 15px

        .forgot-password-btn, .show-signup-form-btn
            background none
            padding 0
            font-size 14px
            cursor pointer
            color text-color
            transition .2s ease-in-out

            &:hover
                color text-color-highlight

        .submit-btn
            margin 30px 0

    .signup-form
        .show-login-form-btn
            background none
            padding 0
            font-size 14px
            cursor pointer
            color text-color
            transition .2s ease-in-out

            &:hover
                color text-color-highlight

        .submit-btn
            margin-bottom 30px
