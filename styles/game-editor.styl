.game-editor
    display block
    box-sizing border-box
    left 1570px
    padding-top 100px
    padding-left 100px
    overflow-y scroll

    input
        margin-right 30px

    .game-path-input
        width 350px
        vertical-align middle

        input
            width 350px

    .game-path-btn
        width 200px
        height 20px
        padding 0 10px
        text-align center
        line-height 20px
        font-size 14px
        vertical-align middle

    .game-custom-bg-container
        display block
        height 365px
        margin-top 80px
        position relative

        .game-custom-bg-preview
            display block
            box-sizing border-box
            width 200px
            height 300px
            margin-right 30px
            padding 20px
            position relative
            float left
            background game-background-color
            // border 2px solid game-border-color
            box-shadow 0 10px 20px rgba(0, 0, 0, .2)

            .text
                display block
                width 100%
                position absolute
                left 50%
                transform translateX(-50%)
                color text-color
                text-align center
                transition ease-in-out .2s

            .title
                top 40%

            .sub-title
                top 60%
                font-size 13px

            .preview
                width 200px
                height 300px
                position absolute
                top 0
                left 0
                z-index -1
                background-size auto
                bcakground-position center

                &.active
                    z-index 1

        .game-image-btn
            width 200px
            height 40px
            position absolute
            bottom 0
            left 0
            text-align center
            line-height 20px
            font-size 14px

    .btn-done
        width 175px
        height 50px
        position absolute
        bottom 140px
        right 360px
        text-align center
        line-height 30px

    .cancel-btn
        width 150px
        height 50px
        position absolute
        bottom 140px
        right 180px
        text-align center
        line-height 30px
