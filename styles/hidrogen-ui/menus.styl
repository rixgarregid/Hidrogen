.dropdown-menu
    display inline-block
    width 170px
    height 40px
    transition .2s ease-in-out
    position relative
    font-size 14px

    &.active
        .dropdown-title
            border-radius 5px 5px 0 0

        .dropdown-icon
            transform rotate(180deg)

        .dropdown-list
            display block

    .dropdown-title
        display inline-block
        width 100%
        height 40px
        padding 10px 20px
        border-radius 5px
        background #37414d
        cursor pointer
        color #a9a9a9
        transition .2s ease-in-out
        box-sizing border-box
        position absolute

        &:hover
            color #fff !important
            background #303d4d

            + .dropdown-icon
                color #fff !important

    .dropdown-icon
        display inline-block
        width 40px
        height 40px
        transition .2s ease-in-out
        position absolute
        top 0
        right 0
        color #a9a9a9
        line-height 40px
        text-align center
        font-size 16px

    .dropdown-list
        display none
        width 100%
        min-height 40px
        position absolute
        top 40px
        border-radius 0 0 5px 5px
        background #37414d

    .dropdown-item
        display block
        width 100%
        height 40px
        // background #37414d
        transition .2s ease-in-out
        padding 10px 20px
        box-sizing border-box
        line-height 20px
        // position absolute
        cursor pointer
        color #a9a9a9

        &:hover
            color #fff !important
            background #303d4d

        &:last-child
            border-radius 0 0 5px 5px

        // &:nth-child(3)
