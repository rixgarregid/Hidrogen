.btn
    display inline-block
    box-sizing border-box
    width auto
    min-width 30px
    min-height 30px
    padding 10px
    border none
    // border-radius 5px
    background button-color-background
    cursor pointer
    color text-color
    font-size 15px
    transition .2s ease-in-out
    text-align center
    line-height normal
    font-family default-font !important

    &.no-icon icon
        display none

    &.no-text span
        display none

    &:hover
        color #fff !important
        background #303d4d

    &[type='success']
        color button-color-success !important
        background button-background-color-success

        &:hover
            background button-hover-background-color-success

    &[type='warning']
        color button-color-warning !important
        background button-background-color-warning

        &:hover
            background button-hover-background-color-warning

    &[type='danger']
        color button-color-danger !important
        background button-background-color-danger

        &:hover
            background button-hover-background-color-danger

    &[type='highlight']
        color button-color-highlight !important
        background button-background-color-highlight

        &:hover
            background button-hover-background-color-highlight

    &.outlined
        border solid 2px #37414d
        background transparent !important

        &:hover
            border solid 2px #303d4d
            color #fff !important

        &[type='success']
            color button-color-success !important
            border-color button-background-color-success

            &:hover
                border-color button-hover-background-color-success

        &[type='warning']
            color button-color-warning !important
            border-color button-background-color-warning

            &:hover
                border-color button-hover-background-color-warning

        &[type='danger']
            color button-color-danger !important
            border-color button-background-color-danger

            &:hover
                border-color button-hover-background-color-danger

        &[type='highlight']
            color button-color-highlight !important
            border-color button-background-color-highlight

            &:hover
                border-color button-hover-background-color-highlight

    icon
        display inline-block
        font-size 1em
        margin-right 10px

