.list
    display block
    width 150px
    list-style-type none

    .list-item
        display block
        width 90px
        height 20px
        font-size 16px
        cursor pointer
        padding 20px 30px
        color #a9a9a9
        transition .2s ease-in-out

        .icon
            float left
            margin-right 20px
            font-size 18px
            vertical-align middle

        .text
            font-family 'Arial'
            vertical-align middle

        &:hover
            color #fff

        &.selected
            color #fff
