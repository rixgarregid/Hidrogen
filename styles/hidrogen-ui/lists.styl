.list
    display block
    width 150px
    list-style-type none

    .list-item
        display block
        width 90px
        height 20px
        font-size 15px
        cursor pointer
        padding 20px 30px
        color #a9a9a9
        transition .2s ease-in-out

        .icon
            float left
            margin-right 20px
            font-size 18px
            vertical-align middle

        .text
            font-family 'Arial'
            vertical-align middle

        &:hover
            color #fff

        &.selected
            color #fff

.h-list
    transition ease-in-out .2s

    &.no-title
        .list-title
            display none

    &.disabled
        cursor default !important
        opacity 0.5

    .list-item
        display block
        width 90px
        height 20px
        font-size 15px
        cursor pointer
        padding 20px 30px
        color text-color
        transition .2s ease-in-out

        icon
            float left
            margin-right 20px
            font-size 18px
            vertical-align middle

        span
            font-family 'Arial'
            vertical-align middle

        &:hover
            color #fff

        &.selected
            color #fff

.h-list[behaviour='checkgroup']
    display block
    width 250px

    &.no-title
        .list-title
            display none

        .list-container
            margin-left 0

    .list-title
        display block
        font-size 17px
        margin-bottom 10px

    .list-container
        display block
        width 100%
        margin-left 15px

        .list-item
            display block
            width 100%
            height 25px
            padding 5px 0
            line-height 25px
            cursor pointer
            transition ease-in-out .2s

            &.selected
                color text-color-highlight

                &:before
                    content '\e3fa'
                    animation tick 250ms ease-in-out

            &:hover
                color text-color-highlight

                &:before
                    border-color text-color-highlight

            &:before
                display inline-block
                content '\e836'
                font-size 1em
                line-height 25px
                margin-right 5px
                font-family 'icons'
                // border 2px solid text-color
                // background transparent
                // border-radius 50%

            @keyframes tick
                0%
                    transform scale(0)
                100%
                    transform scale(1)
