#app
    display block
    width 1570px
    height 870px
    position relative
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-family 'Roboto'
    color #fff
    // background #232c37
    background app-background-color
    // border-radius 10px
    box-shadow 0 5px 20px rgba(0, 0, 0, .5)
    overflow hidden
    transition ease-in-out .2s

    &.focused
        box-shadow 0 5px 20px rgba(0, 0, 0, .5)

    &.blurred
        box-shadow 0 5px 20px rgba(0, 0, 0, .2)

        .window-controls
            opacity 0.7

    &.disable-animations
        *
            transition none
