#app
    display block
    width 1570px
    height 870px
    position relative
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-family default-font
    color text-color
    background app-bg-color
    box-shadow 0 5px 20px rgba(0, 0, 0, .5)
    transition ease-in-out .2s
    overflow hidden

    &.focused
        box-shadow 0 5px 20px rgba(0, 0, 0, .5)

    &.blurred
        box-shadow 0 5px 20px rgba(0, 0, 0, .2)

        .window-controls
            opacity 0.5

    &.disable-animations
        *
            transition none
