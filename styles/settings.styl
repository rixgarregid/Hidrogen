.settings
    display block
    box-sizing border-box
    overflow-y scroll

    .settings-panel
        display inline-block
        box-sizing border-box
        width 100%
        padding 60px
        overflow-y scroll

        .settings-group-title
            display block
            font-size 20px
            color text-color-highlight
            margin-bottom 20px

        .input-toggle
            display block
            margin-bottom 25px

        .autoclose-countdown-toggle
            margin-left 40px

        .lang-list
            margin-bottom 30px

        .disable-home-video-toggle, .clean-library-btn
            margin-bottom 30px

        .restore-settings-btn, .clean-library-btn
            border-radius 5px
            margin-bottom 50px




        .user-profile-settings-section
            display block
            position relative
            height 140px
            border-radius 20px
            margin-bottom 50px
            transition ease-in-out .2s

            &.edit-mode
                height 250px

                .profile-container
                    display none

                .edit-form
                    display block

            .edit-form
                display none

                .profile-pic
                    display block
                    position absolute
                    top 30px
                    left 30px
                    width 80px
                    height 80px
                    border-radius 50%
                    cursor pointer

                    #profile-pic-input
                        display block
                        width 0.1px
                        height 0.1px
                        opacity 0
                        overflow hidden
                        position absolute
                        z-index -1

                    .profile-picture-label
                        display block
                        width 80px
                        height 80px
                        border-radius 50%
                        cursor pointer

                        img
                            display block
                            width 80px
                            height 80px
                            border-radius 50%
                            background #fff

                        .icon-mode_edit
                            display block
                            position absolute
                            top 0
                            left 0
                            width 80px
                            height 80px
                            border-radius 50%
                            background white
                            opacity 0
                            transition ease-in-out .2s
                            text-align center
                            line-height 80px

                        &:hover
                            .icon-mode_edit
                                opacity 0.5

                .name-field
                    width 600px
                    position absolute
                    top 20px
                    left 130px
                    //font-size 21px
                    //border none
                    transition .2s ease-in-out

                     &:focus
                        outline none
                        color text-color-hightlight



                .email-field
                    display inline-block
                    width 600px
                    position absolute
                    top 90px
                    left 130px

                .name-field, .email-field
                    display block
                    margin-bottom 20px
                    color text-color
                    transition .2s ease-in-out
                    cursor pointer

                    &:hover
                        color text-color-highlight !important

                .reset-password
                    display block
                    position absolute
                    top 150px
                    left 130px
                    font-size 13px
                    cursor pointer
                    transition ease-in-out .2s

                    &:hover
                        color text-color-highlight

                .delete-account-btn
                    display inline-block
                    position absolute
                    top 200px

                .save-changes-btn
                    display inline-block
                    position absolute
                    top 200px
                    left 320px

                .cancel-btn
                    display inline-block
                    position absolute
                    top 200px
                    left 220px


            .profile-container
                display block

                .profile-picture
                    display block
                    position absolute
                    top 30px
                    left 30px
                    width 80px
                    height 80px
                    border-radius 50%

                .username
                    display inline-block
                    width 600px
                    position absolute
                    top 40px
                    left 130px
                    font-size 21px
                    border none
                    color text-color-highlight

                .email
                    display inline-block
                    width 600px
                    position absolute
                    top 70px
                    left 130px
                    color text-color-highlight

                .edit-btn
                    background-color #3bb175
                    position absolute
                    top 45px
                    left 400px

            






        .settings-field
            display block
            width 65%
            margin-bottom 20px
            line-height 30px
            // border-bottom 1px solid #c1c1c1

            &:nth-child(3)
                margin-bottom 10px

            &:nth-child(4)
                margin-left 40px

            label
                display block

            .setting-description
                display none
                padding 5px 30px
                font-size 14px
                color text-color

            .lang-label
                display inline-block
                cursor pointer
                color #a9a9a9
                transition .2s ease-in-out
                line-height 40px

                &:hover
                    color #fff

            .lang-dropdown
                margin 0 15px
                vertical-align middle

                &:hover + .lang-label
                    color #a9a9a9

                .dropdown-title
                    padding 0 20px

            .autolang-label
                display inline-block
                height 40px
                vertical-align middle

        .theme-field
            height auto
            margin-bottom 50px !important

        .lang-field
            margin-bottom 50px

        .game-counter-field
            margin-bottom 40px

        .library-field
            margin-bottom 50px !important

        .save-btn
            width 150px
            height 50px
            margin-right 50px
            line-height 30px
            text-align center
            float right

        .clean-library-btn
            width 250px
            // height 40px
            text-align center
            line-height 20px

        .restore-settings-btn
            width 200px
            // height 40px
            text-align center
            line-height 20px
