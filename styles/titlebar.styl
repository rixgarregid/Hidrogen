.titlebar
    display block
    box-sizing border-box
    width 100%
    height 20px
    // border-bottom 1px solid panel-border-color
    background titlebar-bg-color
    -webkit-app-region drag

    .window-controls
        float right
        transition ease-in-out .2s

        .win-control
            width 35px
            height 19px
            padding 0
            float right
            font-size 14px
            line-height 19px
            color text-color
            text-align center
            background none
            -webkit-app-region no-drag

            svg
                fill currentColor

        .btn-window-close:hover svg
            transition ease-in-out .2s
            fill rgb(186, 16, 85) !important
