.home-screen
    font-family 'GravityLight'

    .background-video
        position absolute
        top 0
        right 0
        width 100%
        height 100%
        overflow hidden

        video
            min-width 100%
            min-height 100%

    .background-video-overlay
        position absolute
        top 0
        right 0
        width 100%
        height 100%
        // background #607692
        background primary-color
        opacity .5
        z-index 1

    .main-title
        position absolute
        top 300px
        left 50%
        transform translateX(-50%)
        font-size 50px
        color #e4eefb
        z-index 2

    .sub-title
        position absolute
        top 380px
        left 50%
        transform translateX(-50%)
        font-size 25px
        color #e4eefb
        letter-spacing 0.3px
        z-index 2

    .library-btn
        position absolute
        top 65%
        left 50%
        width 200px
        height 60px
        font-size 17px
        line-height 40px
        border-radius 0
        z-index 2
        box-shadow 0 0 20px rgba(0, 0, 0, 0.2)
        transform translateX(-50%)
        background home-btn-bg-color

        &:hover
            background btn-hover-bg-color

