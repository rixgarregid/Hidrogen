.home-screen
    display inline-block
    width 1270px
    height 850px
    float right
    position absolute
    font-family 'GravityLight'
    transition ease-in-out .2s
    top 20px
    left -970px

    &.active
        left 300px

    .background-video
        position absolute
        top 0
        right 0
        width 100%
        height 100%
        overflow hidden

        video
            min-width 100%
            min-height 100%
            // border-radius 10px 0 0 0

    .background-video-overlay
        position absolute
        top 0
        right 0
        width 100%
        height 100%
        // background #607692
        background board-background-color
        opacity .9
        z-index 1
        // border-radius 10px 0 0 0

    .main-title
        position absolute
        top 300px
        left 50%
        transform translateX(-50%)
        font-size 50px
        color #e4eefb
        z-index 2

    .sub-title
        position absolute
        top 380px
        left 50%
        transform translateX(-50%)
        font-size 25px
        color #e4eefb
        letter-spacing 0.3px
        z-index 2

    .home-btns
        display block
        position relative
        width 420px
        height 60px
        top 70%
        left 50%
        transform translateX(-50%)
        z-index 2

    .library-btn
        position absolute
        top 0
        left 0
        width 200px
        height 60px
        font-size 20px
        line-height 40px
        text-align center
        // background home-button-primary-color

    .add-btn
        position absolute
        top 0
        right 0
        width 200px
        height 60px
        font-size 20px
        line-height 36px
        text-align center
        color #adadad
        // color #37414d
        // font-weight bold
        // border-color home-button-primary-color

        &:hover
            color #fff
