.loader
    display block
    position absolute
    width 100%
    height 100%
    background #1e252e
    z-index 10
    opacity 1

    &.inactive
        animation fadeLoader .3s forwards

    @keyframes fadeLoader
        0%
            opacity 1
            transform scale(1)
        90%
            opacity 0
            transform scale(0.1)
        100%
            transform scale(0)

    .loader-title
        position absolute
        top 45%
        left 50%
        transform translate(-50%, -50%)
        color #fff

    .loader-container
        display flex
        margin 0
        padding 0
        position absolute
        top 55%
        left 50%
        transform translate(-50%, -50%)

        .loader-item
            width 40px
            height 40px
            background #39424e
            border-radius 50%
            box-shadow 0 0 50px
            animation loaderAnimation 1.6s ease-in-out infinite

            &:nth-child(1)
                animation-delay -1.4s

            &:nth-child(2)
                animation-delay -1.2s

            &:nth-child(3)
                animation-delay -1s

            &:nth-child(4)
                animation-delay -0.8s

            &:nth-child(5)
                animation-delay -0.6s

            &:nth-child(6)
                animation-delay -0.4s

            &:nth-child(7)
                animation-delay -0.2s

        @keyframes loaderAnimation
            0%, 40%, 100%
                transform scale(0.2)
            20%
                transform scale(1)
