.game-card
    display inline-block
    box-sizing border-box
    width 200px
    height 300px
    margin-right 35px
    margin-bottom 35px
    padding 20px
    position relative
    border 2px solid #202832
    box-shadow 0 10px 20px rgba(0, 0, 0, .2)
    background #1e252e
    border-radius 10px
    overflow hidden

    &.hidden
        display none

    &:hover
        .title
            top 40%

        .play-btn
            top 70%

        .game-menu-btn
            right 15px

        .background
            opacity 0.7

    &.no-bg
        .title
            top 40% !important

        .custom-background
            display none

    .title
        display block
        width 100%
        position absolute
        top -40px
        left 50%
        transform translateX(-50%)
        color #fff
        text-align center
        transition ease-in-out .2s
        z-index 2

        &.disabled
            top -40px !important

    .play-btn
        width 50%
        height 50px
        position absolute
        top 105%
        left 50%
        transform translateX(-50%)
        line-height 30px
        text-align center
        transition ease-in-out .2s
        z-index 3

        &.disabled
            top 105% !important

    .custom-background
        width 200px
        height 300px
        position absolute
        top 0
        left 0

    .background
        display block
        width 200px
        height 300px
        position absolute
        top 0
        left 0
        opacity 0
        background #000
        transition ease-in-out .4s
        z-index 1

    .game-menu-btn
        width 20px
        height 20px
        padding 0
        position absolute
        top 15px
        right -30px
        background transparent
        cursor pointer
        transition .2s ease-in-out
        z-index 3

        &:hover
            .hamburger
                background #fff

                &:before, &:after
                    background #fff

        &.active
            right 15px

            .hamburger
                background: rgba(0, 0, 0, 0);
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0)

                &:before
                    top: 0;
                    transform: rotate(45deg);

                &:after
                    top: 0;
                    transform: rotate(135deg);

        .hamburger
            display block
            width 20px
            height 3px
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background #aaa
            box-shadow 0 2px 5px rgba(0, 0, 0, .2)
            transition .5s

            &:before, &:after
                content ' '
                width 20px
                height 3px
                position absolute
                background #aaa
                box-shadow 0 2px 5px rgba(0, 0, 0, .2)
                transition .5s

            &:before
                top -7px

            &:after
                top 7px

    .game-menu
        display block
        box-sizing border-box
        width 160px
        height 300px
        position relative
        top 0
        left 0
        overflow hidden
        z-index 2

        &.active
            + .background
                opacity .7

            .menu-list
                top 30px
                animation slideDown ease-in-out .6s

            @keyframes slideDown
                0%
                    top -320px
                60%
                    top 70px
                100%
                    top 30px

        .menu-list
            width 160px
            position relative
            top -320px
            transition ease-in-out .2s

            .list-item
                width 100%
                height 50px
                margin-bottom 15px
                padding 0
                font-size 13px

                &:last-child
                    color rgba(156, 37, 37, 1) !important

                    &:hover
                        color rgba(255, 0, 0, 1) !important

                .icon
                    margin-right 10px
