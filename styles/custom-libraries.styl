.custom-library-manager
    display block
    width 100%
    height 100%
    position absolute
    top 0
    transform scale(3)
    transition .3s cubic-bezier(0.165, 0.840, 0.440, 1.000)
    background rgba(0, 0, 0, .8)
    z-index -1
    opacity 0

    &.active
        transform scale(1)
        opacity 1
        z-index 3

    .library-container
        display grid
        grid-template-columns repeat(4, 300px)
        box-sizing border-box
        width 100%
        height 85%
        padding 50px
        overflow-y scroll

    .floating-btns
        display block
        width 100%
        height 15%
        position relative
        bottom 0
        right 0

        .btn
            float right

        .add-btn
            width 250px
            height 50px
            top 20px
            margin auto
            border-radius 50px
            line-height 30px
            position absolute
            left 50%
            transform translateX(-50%)

            icon
                // margin 0
                font-size 21px
                line-height 30px
                vertical-align middle

            span
                height 30px
                line-height 30px
                vertical-align middle

        .return-btn
            width 150px
            height 50px
            margin-top 20px
            line-height 30px
            border-radius 50px
            margin-right 300px



.custom-library
    display inline-block
    width 280px
    height 150px
    border solid 1px gray
    transition ease-in-out .2s
    cursor pointer
    overflow hidden
    position relative
    margin-bottom 30px

    &.active
        width 100%
        height 100%

    &:hover
        background rgba(0, 0, 0, .5)

        // .title
