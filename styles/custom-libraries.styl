.custom-library-manager
    display block
    width 100%
    height 100%
    position absolute
    top 0
    transform scale(3)
    transition .3s cubic-bezier(0.165, 0.840, 0.440, 1.000)
    background rgba(0, 0, 0, .8)
    z-index -1
    opacity 0

    &.active
        transform scale(1)
        opacity 1
        z-index 3

    .library-container
        display grid
        grid-template-columns repeat(3, 410px)
        box-sizing border-box
        width 100%
        height 85%
        padding 30px
        overflow-y scroll

    .floating-btns
        display block
        width 100%
        height 15%
        position relative
        bottom 0
        right 0

        .btn
            float right

        .add-btn
            width 250px
            height 50px
            top 20px
            margin auto
            border-radius 50px
            line-height 30px
            position absolute
            left 50%
            transform translateX(-50%)

            icon
                // margin 0
                font-size 21px
                line-height 30px
                vertical-align middle

            span
                height 30px
                line-height 30px
                vertical-align middle

        .return-btn
            width 150px
            height 50px
            margin-top 20px
            line-height 30px
            border-radius 50px
            margin-right 300px



.custom-library
    display inline-block
    width 350px
    height 200px
    border solid 1px gray
    transition ease-in-out .2s
    cursor pointer
    overflow hidden
    position relative
    margin-bottom 70px

    &.active
        width 100%
        height 100%

    &:hover
        background rgba(0, 0, 0, .5)

        .title
            // top 50%
            transform translate(-50%, -50%) scale(1)

        .delete-btn
            transform scale(1)

    .title
        position absolute
        // top -20px
        top 50%
        left 50%
        transform translate(-50%, -50%) scale(1)
        transition .2s ease-in-out
        font-size 18px

    .delete-btn
        background none
        color red
        font-size 20px
        position absolute
        top 10px
        right 10px
        transform scale(0)
        transition .2s ease-in-out

        &:hover
            background none

        icon
            margin 0
