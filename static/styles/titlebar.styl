.titlebar
    display block
    width 100%
    height 20px
    border-radius 10px 10px 0 0
    // background #202832
    background #1e252e
    -webkit-app-region drag

    .window-controls
        float right

        .win-control
            width 35px
            height 20px
            padding 0
            float right
            color #a9a9a9
            font-size 14px
            text-align center
            line-height 20px
            -webkit-app-region no-drag
            background none

        .icon-close:hover
            color rgb(186, 16, 85) !important
