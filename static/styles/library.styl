.library
    display inline-block
    width 1220px
    height 850px
    position absolute
    top 20px
    left -1200px
    float right
    transition ease-in-out .2s

    &.active
        left 350px

    .game-container
        display grid
        grid-template-columns repeat(5, 240px)
        box-sizing border-box
        width 100%
        height 100%
        padding 30px
        overflow-y scroll

::-webkit-scrollbar
    display none
